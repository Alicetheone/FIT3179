{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title":"Broadcast Revenue host countries have earned by hosting Olympics",
  "width": 400,
  "height": 200,
  "data": {
    "url": "https://raw.githubusercontent.com/Alicetheone/FIT3179/main/FIT3179_A2.csv"
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "timeUnit": "year",
          "field": "Year",
          "type": "ordinal",
          "title": "Year"
        },
        "y": {
          "aggregate": "mean",
          "field": "Broadcast_Revenue",
          "type": "quantitative",
          "title":"Broadcast Revenue"
        },
        "tooltip": [
          {"field": "Games", "type": "nominal", "title": "Olympic Game"},
          {"field": "Host_Countries", "type": "nominal", "title": "Country"},
          {"field": "City", "type": "nominal", "title": "City"},
          {
            "field": "Broadcast_Revenue",
            "type": "quantitative",
            "title": "Broadcast Revenue (in millions USD)"
          }
        ]
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "y": {
          "aggregate": "mean",
          "field": "Broadcast_Revenue",
          "type": "quantitative"
        },
        "color": {"value": "red"},
        "size": {"value": 2},
        "tooltip": [
          {
            "aggregate": "mean",
            "field": "Broadcast_Revenue",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  ],
  "config": {}
}