{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 700,
  "height": 400,
  "title": {
    "text": "Host Countries of Winter and Summer Olympics (1960 to 2020)",
    "frame": "group"
  },
  "data": [
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/Alicetheone/FIT3179/main/host%20cities.csv",
      "format": {"type": "csv"}
    },
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/Alicetheone/FIT3179/main/ne_110m.json",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_0_countries",
        "parse": {}
      },
      "transform": [
        {
          "type": "formula",
          "expr": "datum[\"properties\"] && datum[\"properties\"][\"NAME\"]",
          "as": "properties.NAME"
        },
        {
          "type": "lookup",
          "from": "source_1",
          "key": "Host Countries",
          "fields": ["properties.NAME"],
          "values": ["Count", "Sum_Revenue"]
        },
        {
          "type": "formula",
          "expr": "datum.Count + 0.1",
          "as": "Count of times hosting Olympic"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Count of times hosting Olympic\"]) && isFinite(+datum[\"Count of times hosting Olympic\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {"signal": "data('source_0')"},
      "type": "equalEarth"
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "Count of times hosting Olympic"},
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"], \"Count\": format(datum[\"Count\"], \"\"), \"Total Revenue\": format(datum[\"Sum_Revenue\"], \"\")}"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"Count of times hosting Olympic: \" + (format(datum[\"Count of times hosting Olympic\"], \"\")) + \"; Country: \" + (isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"]) + \"; Count: \" + (format(datum[\"Count\"], \"\")) + \"; Total Revenue: \" + (format(datum[\"Sum_Revenue\"], \"\"))"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "source_0", "field": "Count of times hosting Olympic"},
      "range": "heatmap",
      "interpolate": "hcl",
      "zero": false
    }
  ],
  "legends": [
    {
      "fill": "color",
      "gradientLength": {"signal": "clamp(height, 64, 200)"},
      "title": "Count of times hosting Olympic"
    }
  ]
}